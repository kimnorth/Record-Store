<h1>Add Album</h1>

<form action="/albums" method="POST">

<p>

<label for="title">Title: </label>
  <input type="text" id="title" name="title" />

</p>

<p>

<label for="artist">Artist: </label>
  <input type="text" id="artist" name="artist" />
</p>

<p> 

<label>Genre:
  <select name="genre">
    <% for genre in @all_genres %>
      <option value="<%= genre %>"><%= genre.name %></option> 
    <% end %>
  </select>
</label>

</p>

<label for="quantity">Quantity: </label>
  <input type="number" id="quantity" name="quantity" />

</p>

<p>
<label for="buy-price">Buy Price: </label>
  <input type="number" id="buy-price" name="buy_price">
</p>

<p>
<label for="sell-price">Sell Price: </label>
  <input type="number" id="sell-price" name="sell_price">
</p>

<p>
<input type="submit" value="Add" />
</p>
</form>


