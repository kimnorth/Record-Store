<h1>Update Album</h1>

<p>Title: <%= @album.title %></p>
<p>Artist: <%= @album.artist %></p>
  
<form action="/albums/update" method="POST">

<input type="hidden" value="<%= @album.title %>" name="title" />

<input type="hidden" value="<%= @album.artist %>" name="artist" />

<input type="hidden" value="<%= @album.id_artists %>" name="id_artists" />

<input type="hidden" value="<%= @album.id %>" name="id" />

<label for="quantity">Quantity: </label>
  <input type="number" id="quantity" name="quantity" />

<label for="buy-price">Buy Price: </label>
  <input type="number" id="buy-price" name="buy_price" />

<label for="sell-price">Sell Price: </label>
  <input type="number" id="sell-price" name="sell_price" />

<input type="submit" value="Update" />

</form>

<!-- Check which field maps to the database so you can make sure you're using snail_case -->